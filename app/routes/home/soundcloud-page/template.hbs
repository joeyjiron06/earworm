<h2>SoundClound Sync</h2>

<div>
  <span>Search: </span> {{input value=query type='text' enter="enterPressed" class="scp-search-input"}}
</div>


{{!--<div class="scp-new-room-button {{unless flags.newRoomButtonEnabled 'scp-disabled-button' }}" {{action 'newRoomClicked'}} >New Room</div>--}}
{{#if isEnteringRoom}}
  <div>Entering : {{displayable.roomId}}</div>
{{else if isErrorEnteringRoom}}
  <div>Error entering room: {{displayable.roomId}}</div>
{{else if isSuccessEnteringRoom}}
  <div>In room : {{displayable.room.name}}</div>

  <div>Users in room:</div>
  {{#each displayable.room.displayableUsers as |user|}}
    <div>{{user.id}}</div>
  {{/each}}

{{/if}}


{{components/audio-player audio=outlets.audio}}

<div class="scp-search-results-list">
  {{#each items as |item|}}
    <div class="scp-search-result-item" {{action 'itemClicked' item}}>
      <div class="scp-search-result-item-artwork" style="background-image: url('{{{item.artwork_url}}}')" ></div>
      <div class="scp-search-result-item-title">{{item.title}}</div>
    </div>
  {{/each}}
</div>
